<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :description, placeholder: "Describe event..." %>
  </div>
  <div class="field">
    <%= f.text_area :location, placeholder: "Describe place..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>